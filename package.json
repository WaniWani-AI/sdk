{
  "name": "@waniwani/sdk",
  "version": "0.1.5",
  "description": "WaniWani SDK - MCP event tracking, widget framework, and tools",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./mcp": {
      "import": "./dist/mcp/index.js",
      "types": "./dist/mcp/index.d.ts"
    },
    "./mcp/react": {
      "import": "./dist/mcp/react.js",
      "types": "./dist/mcp/react.d.ts"
    },
    "./chat": {
      "import": "./dist/chat/index.js",
      "types": "./dist/chat/index.d.ts"
    },
    "./chat/server": {
      "import": "./dist/chat/server/index.js",
      "types": "./dist/chat/server/index.d.ts"
    },
    "./chat/styles.css": "./dist/chat/styles.css",
    "./next-js": {
      "import": "./dist/chat/next-js/index.js",
      "types": "./dist/chat/next-js/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && bun run typecheck && bun run lint && tsup && bun run build:chat-css",
    "build:chat-css": "tailwindcss -i src/chat/web/tailwind.css -o dist/chat/styles.css --minify",
    "dev": "tsx --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "prepublishOnly": "bun run build",
    "release": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=1.0.0",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "react": ">=18.0.0",
    "zod": ">=4.0.0",
    "@ai-sdk/react": ">=1.0.0",
    "ai": ">=4.0.0",
    "lucide-react": ">=0.400.0",
    "use-stick-to-bottom": ">=1.0.0",
    "streamdown": ">=2.0.0",
    "@streamdown/cjk": ">=1.0.0",
    "@streamdown/code": ">=1.0.0",
    "clsx": ">=2.0.0",
    "tailwind-merge": ">=3.0.0",
    "nanoid": ">=5.0.0",
    "@ai-sdk/mcp": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "@modelcontextprotocol/ext-apps": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "@ai-sdk/react": {
      "optional": true
    },
    "ai": {
      "optional": true
    },
    "lucide-react": {
      "optional": true
    },
    "use-stick-to-bottom": {
      "optional": true
    },
    "streamdown": {
      "optional": true
    },
    "@streamdown/cjk": {
      "optional": true
    },
    "@streamdown/code": {
      "optional": true
    },
    "clsx": {
      "optional": true
    },
    "tailwind-merge": {
      "optional": true
    },
    "nanoid": {
      "optional": true
    },
    "@ai-sdk/mcp": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ai-sdk/mcp": "^1.0.0",
    "@ai-sdk/react": "^3.0.73",
    "@biomejs/biome": "^2.3.13",
    "@modelcontextprotocol/ext-apps": "1.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@streamdown/cjk": "^1.0.1",
    "@streamdown/code": "^1.0.1",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.2.3",
    "ai": "^6.0.71",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.2.4",
    "streamdown": "^2.1.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tsup": "^8.3.5",
